<% content_for :left_column do %>
    <h1>All Users</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Favorite Language</th>
            </tr>
        </thead>
        <tbody>
            <% User.all.each do |u| %>
                <tr>
                    <td><%= u.first_name %></td>
                    <td><%= u.last_name %></td>
                    <td><%= u.favorite_language %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% end %>

<% content_for :right_column do %>
    <h1>New User</h1>
    <form action="<%= users_url %>" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <p><label>First Name</label></p>
        <p><input type="text" name="user[first_name]"></p>
        <p><label>Last Name</label></p>
        <p><input type="text" name="user[last_name]"></p>
        <p><label>Favorite Language</label></p>
        <p><input type="text" name="user[favorite_language]"></p>
        <p><input class="btn btn-primary" type="submit" value="Submit"></p>
    </form>
    <p><a class="btn btn-info" href="<%= posts_url %>">All Posts</a></p>
<% end %>